{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "*"],
	"exclude": ["node_modules"]
}
